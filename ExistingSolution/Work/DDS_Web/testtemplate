<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script>
    var statusTimer;
    $(document).ready(function(){
        $('.sidenav').sidenav();
        $('.modal').modal();
    });

    function onSave() {
        $.ajax({
            url: "save_userinfo",
            type : "POST",
            dataType: 'json',
            data: {
                csrfmiddlewaretoken: '{{ csrf_token }}',
                username: $("#login_name").val(),
                password: $("#login_pass").val()
            },
            success: function (data) {
                if (data.status) {
                    $("#login_name_org").val($("#login_name").val());
                    $("#login_pass_org").val($("#login_pass").val());
                    alert("Saved successfully!");
                }
            }
        });
    }

    function onCancel() {
        $("#login_name").val($("#login_name_org").val());
        $("#login_pass").val($("#login_pass_org").val());
    }

    $("#btnSearch").click(function(){
        $("#btnSearch").addClass('disabled');

        $('.preloader-wrapper').addClass('active');
        $('#server_status').removeClass('hide');
        $('#btnStop').removeClass('hide');

        var form = $(this).closest("form");
        form.submit();

        statusTimer = setInterval(getStatus, 1000);
    });

    function getStatus() {
        $.ajax({
            url: "get_status",
            type: "GET",
            dataType: 'json',
            success: function (data) {
                $.each(data, function(name, value) {
                    if (name == "status" && value) {
                        //console.log(value + "\n");
                        $('#server_status').append(value + "\n");
                        $('#server_status').animate({ scrollTop: $("#server_status").prop("scrollHeight") });
                    }
                });
            }
        });
    }

    $("#btnStop").click(function(){
        clearInterval(statusTimer);

        $.ajax({
            url: "stop_search",
            type : "POST",
            data: {
                csrfmiddlewaretoken: '{{ csrf_token }}'
            },
            success: function (data) {
                if (data.status) {
                    $('.preloader-wrapper').removeClass('active');
                    $('#server_status').addClass('disabled');
                    $('#btnStop').addClass('disabled');

                    $('#preloader').html("<div class='progress' style='margin-top: 15px;'><div class='indeterminate'></div></div>");
                }
            }
        });
    });

</script>
